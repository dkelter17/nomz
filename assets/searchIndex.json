---
---
{
  {%- for recipe in site.data.recipe_database -%}
    "{{ recipe.source | slugify }}": {
      "title": "{{ recipe.title | xml_escape }}",
      "category": "dinner",
      "tags": {{recipe.tags|jsonify}},
      "content": {{ recipe.source | strip_newlines | jsonify }},
      "url": "{{ recipe.url | xml_escape }}",
      "external_url": "{{ recipe.url | xml_escape }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor -%}
}